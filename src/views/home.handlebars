  </nav>
  <!-- Navigation End -->

  <!-- Main -->
  <main id="main-content" class="main-content">

    <!-- Fact Selection Buttons Container Start -->
    <div id="fact-selection-btns-container" class="fact-selection-btns-container">
      <div id="overview-selection-btn" class="selection-btn">
        <h3 class="selection-btn-copy">Overview</h3>
        <div id="overview-selection-marker" class="selection-marker {{planetColor}}-color"></div>
      </div>
      <div id="structure-selection-btn" class="selection-btn">
        <h3 class="selection-btn-copy">Structure</h3>
        <div id="structure-selection-marker" class="selection-marker {{planetColor}}-color"></div>
      </div>
      <div id="geology-selection-btn" class="selection-btn">
        <h3 class="selection-btn-copy">Surface</h3>
        <div id="geology-selection-marker" class="selection-marker {{planetColor}}-color"></div>
      </div>
    </div>
    <div class="nav-horizontal-line"></div>
    <!-- Fact Selection Buttons Container End -->

    <!-- Main Image Start -->
    <div id="planet-img-container" class="planet-img-container">
      <div style="background-image:url(../public{{planetImg}})" id="planet-mercury-img" class="planet-img mercury-img"></div>
    </div>
    <!-- Main Image End -->

    <!-- Planet Structure Image Start -->
    <div id="planet-structure-img-container" class="planet-img-container">
      <div style="background-image:url(../public{{planetStructureImg}})" id="planet-mercury-img" class="planet-img mercury-img"></div>
    </div>
    <!-- Planet Structure Image End -->

    <!-- Planet Geology Image Start-->
    <div id="planet-geology-img-container" class="planet-img-container">
      <div style="background-image:url(../public{{planetGeologyImg}})" id="planet-mercury-img" class="planet-img mercury-img"></div>
    </div>
    <!-- Planet Geology Image End -->

    <!-- Planet Information Start -->
    <article class="planet-info-container">
      <h1 class="main-headline">{{planetName}}</h1>

      <!-- Overview Content Start -->
      <p id="planet-overview-copy" class="planet-info-copy">{{planetOverview}}</p>
      <!-- Overview Content End -->
      
      <!-- Internal Structure Content Start -->
      <p id="planet-structure-copy" class="planet-info-copy">{{planetStructure}}</p>
      <!-- Internal Structure Content End -->
      
      <!-- Surface Geology Content Start -->
      <p id="planet-surface-copy" class="planet-info-copy">{{planetGeology}}</p>
      <!-- Surface Geology Content End -->

      <div id="planet-src-container" class="planet-src-container">
        <p id="planet-src-copy" class="src-copy">Source : <a href="{{planetSrc}}" target="_blank">Wikipedia</a> <!-- URL: https://en.wikipedia.org/wiki/Mercury_(planet) --></p>
        <div class="arrow-icon"></div>
      </div>
      

